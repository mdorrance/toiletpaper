							</ul>
					</div>	
					<div class="family">
						<h2>Families</h2>		
							<h3>Ruby Family Name</h2>
								<ul>
									<li>Name 1</li>
									<li>Name 2</li>
								</ul>
					</div>
		</aside>

		<div class="primary">
			<h2>Inventory</h2>	
			<table class="inventory">
					<tr>
						<th>Item</th>
						<th>Quantity</th>
					</tr>
					<tr>
						<td>RUBY item description name</td>
						<td>RUBY quantity</td>
					</tr>
			</table>	
		</div>	
	</div>


<% @items.each do |item| %>
  <tr>
    <td><%= item.name %></td>
    <td><%= item.quantity %></td>
    <td><%= item.date %></td>
    <td><%= item.family.last_name %></td>
    <td><%= item.inventory.name %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

